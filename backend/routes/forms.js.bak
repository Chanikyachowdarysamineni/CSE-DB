const express = require('express');
const router = express.Router();
const { authenticateToken, authorizeRoles } = require('../middleware/auth');
const { pool } = require('../models/User');

// Get all forms
router.get('/', authenticateToken, async (req, res) => {
  try {
    const result = await pool.query('SELECT * FROM forms ORDER BY created_at DESC');
    res.json(result.rows);
  } catch (error) {
    console.error('Error fetching forms:', error);
    res.status(500).json({ error: 'Failed to fetch forms' });
  }
});

// Get single form by ID
router.get('/:id', authenticateToken, async (req, res) => {
  try {
    const { id } = req.params;
    const result = await pool.query('SELECT * FROM forms WHERE id = $1', [id]);
    
    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Form not found' });
    }
    
    res.json(result.rows[0]);
  } catch (error) {
    console.error('Error fetching form:', error);
    res.status(500).json({ error: 'Failed to fetch form' });
  }
});

// Create form
router.post('/', authenticateToken, authorizeRoles('HOD', 'DEAN', 'Faculty'), async (req, res) => {
  try {
    const { 
      title, description, google_form_link, google_sheet_link, 
      expiry_date, subject_name, subject_code 
    } = req.body;
    
    // Validate required fields
    if (!title || !google_form_link) {
      return res.status(400).json({ error: 'Title and Google Form link are required' });
    }
    
    const created_by = req.user.id;

    const result = await pool.query(
      `INSERT INTO forms (title, description, google_form_link, google_sheet_link, expiry_date, subject_name, subject_code, created_by)
       VALUES ($1, $2, $3, $4, $5, $6, $7, $8) RETURNING *`,
      [title, description, google_form_link, google_sheet_link, expiry_date, subject_name, subject_code, created_by]
    );

    res.status(201).json(result.rows[0]);
  } catch (error) {
    console.error('Error creating form:', error);
    res.status(500).json({ error: 'Failed to create form' });
  }
});

// Update form
router.put('/:id', authenticateToken, authorizeRoles('HOD', 'DEAN', 'Faculty'), async (req, res) => {
  try {
    const { id } = req.params;
    const { 
      title, description, google_form_link, google_sheet_link, 
      expiry_date, responses, subject_name, subject_code 
    } = req.body;
    
    // For Faculty, check ownership
    if (req.user.role === 'Faculty') {
      const checkOwner = await pool.query('SELECT created_by FROM forms WHERE id = $1', [id]);
      if (checkOwner.rows.length === 0) {
        return res.status(404).json({ error: 'Form not found' });
      }
      if (checkOwner.rows[0].created_by !== req.user.id) {
        return res.status(403).json({ error: 'Not authorized to edit this form' });
      }
    }

    const result = await pool.query(
      `UPDATE forms 
       SET title = COALESCE($1, title), 
           description = COALESCE($2, description), 
           google_form_link = COALESCE($3, google_form_link),
           google_sheet_link = COALESCE($4, google_sheet_link),
           expiry_date = COALESCE($5, expiry_date),
           responses = COALESCE($6, responses),
           subject_name = COALESCE($7, subject_name),
           subject_code = COALESCE($8, subject_code),
           updated_at = CURRENT_TIMESTAMP
       WHERE id = $9 RETURNING *`,
      [title, description, google_form_link, google_sheet_link, expiry_date, responses, subject_name, subject_code, id]
    );

    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Form not found' });
    }

    res.json(result.rows[0]);
  } catch (error) {
    console.error('Error updating form:', error);
    res.status(500).json({ error: 'Failed to update form' });
  }
});

// Increment response count
router.post('/:id/response', authenticateToken, async (req, res) => {
  try {
    const { id } = req.params;

    const result = await pool.query(
      `UPDATE forms SET responses = responses + 1 WHERE id = $1 RETURNING *`,
      [id]
    );

    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Form not found' });
    }

    res.json(result.rows[0]);
  } catch (error) {
    console.error('Error updating form response count:', error);
    res.status(500).json({ error: 'Failed to update form response count' });
  }
});

// Delete form
router.delete('/:id', authenticateToken, authorizeRoles('HOD', 'DEAN', 'Faculty'), async (req, res) => {
  try {
    const { id } = req.params;
    
    // For Faculty, check ownership
    if (req.user.role === 'Faculty') {
      const checkOwner = await pool.query('SELECT created_by FROM forms WHERE id = $1', [id]);
      if (checkOwner.rows.length === 0) {
        return res.status(404).json({ error: 'Form not found' });
      }
      if (checkOwner.rows[0].created_by !== req.user.id) {
        return res.status(403).json({ error: 'Not authorized to delete this form' });
      }
    }
    
    const result = await pool.query('DELETE FROM forms WHERE id = $1 RETURNING *', [id]);

    if (result.rows.length === 0) {
      return res.status(404).json({ error: 'Form not found' });
    }

    res.json({ message: 'Form deleted successfully' });
  } catch (error) {
    console.error('Error deleting form:', error);
    res.status(500).json({ error: 'Failed to delete form' });
  }
});

module.exports = router;
